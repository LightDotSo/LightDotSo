{
  // Exclude generated files
  "files.exclude": {
    "**/plonk_vk.sol": true,
    "**/crates/prisma/src/lib.rs": true
  },
  // Formatter settings on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact"],
  // Files linting
  "files.associations": {
    ".gas-snapshot": "julia"
  },
  // Npm settings
  "npm.exclude": "**/lib/**",
  // Typescript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Solidity settings
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  // Tailwind settings
  // From: https://github.com/joe-bell/cva/discussions/85#discussioncomment-5014769
  "tailwindCSS.experimental.classRegex": [
    // enable autocomplete in cx(...)
    ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    // enable autocomplete in cva(...)
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.experimental.configFile": "configurations/tailwindcss/src/index.js",
  "evenBetterToml.taplo.configFile.path": ".taplo.toml"
}
