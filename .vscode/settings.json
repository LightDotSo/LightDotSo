{
  // File specific settings
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // Exclude generated files
  "files.exclude": {
    "**/plonk_vk.sol": true,
    "**/crates/prisma/src/lib.rs": true
  },
  // Formatter settings on save
  "editor.rulers": [
    80,
    100
  ],
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.organizeImports.biome": "always"
  },
  // Toml settings
  "evenBetterToml.taplo.configFile.path": ".taplo.toml",
  // Files linting
  "files.associations": {
    ".gas-snapshot": "julia"
  },
  // Json schema settings
  // From: https://github.com/typehero/typehero/blob/83577d389c287e8c37ac03a02cf3d9e6ac1e3c6e/.vscode/settings.json#L4
  // Inspired by License: AGPL-3.0
  "json.schemas": [
    {
      "fileMatch": [
        "tsconfig.*.json"
      ],
      "url": "https://json.schemastore.org/tsconfig"
    },
    {
      "fileMatch": [
        "turbo.json"
      ],
      "url": "https://turbo.build/schema.json"
    },
    {
      "fileMatch": [
        "vercel.json"
      ],
      "url": "https://openapi.vercel.sh/vercel.json"
    }
  ],
  // Npm settings
  "npm.exclude": "**/lib/**",
  // Rust settings
  "rust-analyzer.diagnostics.disabled": [
    "unresolved-proc-macro"
  ],
  "rust-analyzer.rustfmt.extraArgs": [
    "+nightly"
  ],
  "rust-analyzer.showUnlinkedFileNotification": false,
  // Tailwind settings
  // From: https://github.com/joe-bell/cva/discussions/85#discussioncomment-5014769
  "tailwindCSS.experimental.classRegex": [
    // enable autocomplete in cx(...)
    [
      "cx\\(((?:[^()]|\\([^()]*\\))*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    // enable autocomplete in cva(...)
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cva\\(((?:[^()]|\\([^()]*\\))*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "tailwindCSS.experimental.configFile": "configurations/tailwindcss/src/index.mjs",
  // Typescript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Cspell settings
  "cSpell.files": [
    "**"
  ],
  "cSpell.enabled": true,
  "cSpell.autoFormatConfigFile": true,
  // Solidity settings
  "solidity.packageDefaultDependenciesContractsDirectory": "contracts/src",
  "solidity.packageDefaultDependenciesDirectory": "",
  "solidity.nodemodulespackage": "solc",
  "solidity.defaultCompiler": "localNodeModule",
  "solidity.compileUsingRemoteVersion": "v0.8.27+commit.40a35a09",
  "solidity.formatter": "forge",
  "solidity.monoRepoSupport": true
}