{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_VERCEL_URL", "INNGEST_EVENT_KEY"],
      "inputs": ["app/**", "pages/**", "src/**", "next.config.js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": ["build"],
      "env": ["ENVIRONMENT_URL", "NODE_ENV"]
    }
  }
}
