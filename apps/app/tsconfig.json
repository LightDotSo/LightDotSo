{
  "extends": "@lightdotso/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "paths": {
      "@/app/*": ["./app/*"],
      "@/*": ["./src/*"]
    },
    "target": "es2020"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/hooks/src/useMediaQuery.ts"
  ],
  "exclude": ["node_modules"]
}
