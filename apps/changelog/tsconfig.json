{
  "extends": "@lightdotso/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "paths": {
      "@/app/*": ["./app/*"],
      "@/public/*": ["./public/*"],
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "target": "es2020"
  },
  "include": [
    "keystatic.config.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
