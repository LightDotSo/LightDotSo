{
  "extends": "@lightdotso/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "paths": {
      "@/app/*": ["./app/*"],
      "@/*": ["./src/*"],
      "~/*": ["./*"],
      "content-collections": ["./.content-collections/generated"]
    },
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "content-collections.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
