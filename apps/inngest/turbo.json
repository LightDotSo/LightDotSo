{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NODE_ENV",
        "KAFKA_BROKER",
        "KAFKA_USERNAME",
        "KAFKA_PASSWORD",
        "SENTRY_DSN",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REST_API_TOKEN",
        "VERCEL_ENV"
      ],
      "inputs": ["app/**", "pages/**", "src/**", "next.config.js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
