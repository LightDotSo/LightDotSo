{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL", "NODE_ENV"],
      "inputs": ["src/**", "prisma/schema.prisma"],
      "outputs": [
        "dist/**",
        "prisma/schema-rs.prisma",
        "./../../node_modules/.pnpm/*/node_modules/@prisma/client"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
