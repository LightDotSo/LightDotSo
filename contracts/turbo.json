{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": [
        "src/**",
        "../lib/**",
        "../.gitmodules",
        "../hardhat.config.ts",
        "../foundry.toml",
        "../remappings.txt"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "env": ["ETH_RPC_MAINNET", "VITEST_POOL_ID"]
    }
  }
}
