{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "cache": false,
      "inputs": [
        "**",
        "../lib/**",
        "../.gitmodules",
        "../hardhat.config.ts",
        "../foundry.toml",
        "../remappings.txt"
      ],
      "outputs": ["../out", "../.gas-snapshot", "../foundry.toml"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"],
      "env": ["ETH_RPC_MAINNET", "VITEST_POOL_ID"]
    }
  }
}
