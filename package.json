    "ncu:upgrade": "concurrently 'pnpm:ncu:upgrade:*'"
  },
  "dependencies": {
    "expo": "^48.0.19"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.4",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-custom": "workspace:*",
    "npm-check-updates": "^16.10.12",
    "prettier": "^2.8.8",
    "rome": "^12.1.3",
    "turbo": "^1.10.4",
    "vercel": "^30.2.3"
  },
  "packageManager": "pnpm@7.15.0"
}
