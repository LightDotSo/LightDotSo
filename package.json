{
  "name": "lightdotso",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "ci": "rome ci .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "echo \"Error: no test specified\"",
    "ncu:check": "ncu--packageFile 'packages/**/package.json'",
