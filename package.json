  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "fix": "concurrently 'pnpm:*:fix'",
    "forge:fmt:cmd": "forge fmt",
    "forge:snapshot:cmd": "forge snapshot && echo",
    "hardhat:compile": "hardhat compile",
    "hardhat:compile:coverage": "hardhat compile-for-coverage",
    "hardhat:node": "hardhat node",
    "lint": "concurrently 'pnpm:*:lint'",
    "npm-package-json:lint": "npmPkgJsonLint ./apps ./android ./configuations ./contracts ./crates ./ios ./packages",
    "pnpm:upgrade": "pnpm update --latest --recursive",
    "prepare": "husky install",
    "prettier:cmd": "prettier",
    "prettier:fix": "prettier --write .",
    "prettier:lint": "prettier --check .",
    "release": "changeset publish",
    "solhint:cmd": "solhint 'contracts/**/*.sol'",
    "solhint:fix": "solhint 'contracts/**/*.sol' --fix",
    "solhint:lint": "solhint 'contracts/**/*.sol'",
    "sort-package-json:fix": "sort-package-json '{apps,configurations,contracts,crates,fastlane,ios,packages}/**/package.json'",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "wagmi:generate": "wagmi generate"
  },
