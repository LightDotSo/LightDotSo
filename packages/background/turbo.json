{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "inputs": ["src/**"],
      "outputs": [
        "../../ios/LightalletSafariExtension/Resources/background.js",
        "../../apps/extension/chrome/background.js",
        "../../apps/extension/firefox/background.js"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
