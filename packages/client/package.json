{
  "name": "@lightdotso/client",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/LightDotSo/LightDotSo",
  "bugs": {
    "url": "https://github.com/LightDotSo/LightDotSo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LightDotSo/LightDotSo.git"
  },
  "license": "AGPL-3.0-or-later",
  "author": "Light, Inc.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "pnpm run build:light && pnpm run build:prepare && pnpm tsup",
    "build:light": "npx openapi-typescript https://api.light.so/api-docs/openapi.json -o ./src/v1.d.ts",
    "build:local": "npx openapi-typescript http://localhost:3000/api-docs/openapi.json -o ./src/v1.d.ts",
    "build:prepare": "./prepend.sh",
    "clean": "rimraf -rf dist && rimraf -rf src/v1.d.ts"
  },
  "dependencies": {
    "@lightdotso/schemas": "workspace:*",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "neverthrow": "^6.1.0",
    "openapi-fetch": "^0.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@lightdotso/tsconfig": "workspace:*",
    "@types/node": "^20.8.7",
    "openapi-typescript": "^6.7.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
