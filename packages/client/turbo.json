{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "LIGHT_ADMIN_TOKEN",
        "LIGHT_RPC_TOKEN",
        "LOCAL_ENV",
        "NEXT_PUBLIC_LIGHT_ADMIN_TOKEN",
        "NEXT_PUBLIC_LOCAL_ENV",
        "SIMPLEHASH_API_KEY",
        "STORYBOOK_ENV"
      ],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": ["src/types/api/**"]
    }
  }
}
