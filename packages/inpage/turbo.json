{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "inputs": ["**"],
      "outputs": [
        "../../ios/LightWalletSafariExtension/Resources/inpage.js",
        "../../apps/extension/chrome/inpage.js",
        "../../apps/extension/firefox/inpage.js"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
