{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["CI", "JITSU_JS_KEY", "NODE_ENV", "VERCEL"],
      "inputs": ["src/**"],
      "outputs": [
        ".next/**",
        "../../ios/LightalletSafariExtension/Resources/popup/**",
        "../../ios/LightalletSafariExtension/Resources/popup.html"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
