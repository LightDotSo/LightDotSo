{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "clean"],
      "env": ["NODE_ENV"],
      "inputs": ["_locales", "images"],
      "outputs": [
        "../../ios/LightalletSafariExtension/Resources/_locales/**",
        "../../ios/LightalletSafariExtension/Resources/images/**",
        "../../apps/extension/chrome/_locales/**",
        "../../apps/extension/chrome/images/**",
        "../../apps/extension/firefox/_locales/**",
        "../../apps/extension/firefox/images/**"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
