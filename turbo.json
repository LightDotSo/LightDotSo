{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#ci": {
      "cache": false
    },
    "//#hardhat:compile": {
      "outputs": ["artifacts/**"],
      "inputs": ["contracts/src/**"]
    },
    "//#hardhat:compile:coverage": {
      "outputs": ["artifacts/**", "coverage-data.json"],
      "inputs": ["contracts/src/**"]
    },
    "//#lint": {
      "dependsOn": [],
      "outputs": [],
      "inputs": [
        "apps/**",
        "configurations/**",
        "contracts/**",
        "crates/**",
        "fastlane/**",
        "packages/**"
      ]
    },
    "//#test": {
      "env": ["ETH_RPC_MAINNET", "VITEST_POOL_ID"],
      "dependsOn": ["hardhat:compile"]
    },
    "//#test:coverage": {
      "env": ["ETH_RPC_MAINNET", "VITEST_POOL_ID"],
      "dependsOn": ["hardhat:compile:coverage"],
      "outputs": ["coverage/**"]
    }
  }
}
